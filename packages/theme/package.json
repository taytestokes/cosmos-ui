{
  "name": "@spirit-ui/theme",
  "description": "Theme for Spirit UI Design System.",
  "author": "Tayte Stokes",
  "version": "0.0.2",
  "exports": {
    ".": {
      "require": "./dist/theme.js",
      "import": "./dist/theme.mjs"
    },
    "./styles": {
      "require": "./dist/theme.css",
      "import": "./dist/theme.css"
    },
    "./reset": {
      "require": "./dist/reset.css",
      "import": "./dist/reset.css"
    }
  },
  "files": [
    "dist/**"
  ],
  "keywords": [
    "spirit-ui",
    "theme"
  ],
  "license": "MIT",
  "homepage": "https://github.com/taytestokes/spirit-ui",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/taytestokes/spirit-ui.git",
    "directory": "packages/theme"
  },
  "bugs": {
    "url": "https://github.com/taytestokes/spirit-ui/issues"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch"
  },
  "devDependencies": {
    "@vanilla-extract/esbuild-plugin": "^2.3.11",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@vanilla-extract/css": "^1.16.0"
  },
  "peerDependencies": {
    "@vanilla-extract/css": "^1.16.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
