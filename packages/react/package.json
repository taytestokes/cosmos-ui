{
  "name": "@spirit-ui/react",
  "description": "The React component library for Spirit UI.",
  "author": "Tayte Stokes",
  "version": "0.0.11",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./styles": {
      "require": "./dist/index.css",
      "import": "./dist/index.css"
    }
  },
  "keywords": [
    "spirit-ui",
    "component",
    "library"
  ],
  "license": "MIT",
  "homepage": "https://github.com/taytestokes/spirit-ui",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/taytestokes/spirit-ui.git",
    "directory": "packages/react"
  },
  "bugs": {
    "url": "https://github.com/taytestokes/spirit-ui/issues"
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup index.ts",
    "check-format": "prettier --check .",
    "clean": "rm -rf ./node_modules && rm -rf ./.turbo && rm -rf ./dist",
    "dev": "tsup index.ts --watch",
    "format": "prettier --write .",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@vanilla-extract/esbuild-plugin": "^2.3.11",
    "eslint": "^8.57.1",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@linaria/core": "^6.2.0",
    "@linaria/react": "^6.2.1",
    "@stitches/react": "^1.2.8",
    "@vanilla-extract/css": "^1.16.0",
    "@vanilla-extract/css-utils": "^0.1.4",
    "@vanilla-extract/recipes": "^0.5.5"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
